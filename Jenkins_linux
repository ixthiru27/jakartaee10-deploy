pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
    }
stage('Build') {
            steps {
                bat 'mvn clean package -DskipTests'
            }
        }
stage('Deploy') {
            steps {
                bat '''
                copy /Y target\\jakartaee10-starter-boilerplate.war "C:\\Program Files\\Apache Software Foundation\\Tomcat 11.0\\webapps\\"
                '''
            }
        }
}
