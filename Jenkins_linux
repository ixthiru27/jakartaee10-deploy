pipeline {
    agent any

    tools {
        maven 'local_maven'
        jdk 'java21'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                cp target/jakartaee10-starter-boilerplate.war /root/tomcat/webapps/
                '''
            }
        }
    }
}
